<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">

        <shape>
            <solid android:color="@android:color/transparent"/>

            <stroke
                android:width="1dp"
                android:color="#E0E0E0"
                android:dashGap="1px"
                android:dashWidth="1px"/>
        </shape>
    </item>

</layer-list>
